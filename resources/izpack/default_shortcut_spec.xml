<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- This is the shortcut specification for windows. Its considered default 
	so on Systems that are not shortcut compatible the information is taken from 
	here. -->
<izpack:shortcuts
    xmlns:izpack="http://izpack.org/schema/shortcuts"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.2/izpack-shortcuts-5.2.xsd"
    version="5.0">

	<shortcut name="esupSgcClient"
		target="$INSTALL_PATH\java\bin\javaw.exe" commandLine="-Dcom.sun.webkit.useHTTP2Loader=false -jar esup-sgc-client.jar"
		workingDirectory="$INSTALL_PATH\$version" description="esupsgclient"
		iconFile="$INSTALL_PATH\icon\esupsgcclient.ico" iconIndex="0"
		initialState="maximized" desktop="yes"
		applications="yes" startMenu="yes">
        <createForPack name="esup-sgc-client"/>
    </shortcut>
	<shortcut name="esupSgcClientZebra"
		target="$INSTALL_PATH\java\bin\javaw.exe" commandLine="-Dcom.sun.webkit.useHTTP2Loader=false -DprinterZebraEncoderType=other -jar esup-sgc-client-zebra.jar"
		workingDirectory="$INSTALL_PATH\$version" description="esupsgclient zebra"
		iconFile="$INSTALL_PATH\icon\esupsgcclient.ico" iconIndex="0"
		initialState="maximized" desktop="yes"
		applications="yes" startMenu="yes">
        <createForPack name="esup-sgc-client-zebra"/>
    </shortcut>        
	<shortcut name="esupSgcClientEvolisSdk"
		target="$INSTALL_PATH\java\bin\javaw.exe" commandLine="-Dcom.sun.webkit.useHTTP2Loader=false -jar esup-sgc-client-evolis-sdk.jar"
		workingDirectory="$INSTALL_PATH\$version" description="esupsgclient evolis sdk"
		iconFile="$INSTALL_PATH\icon\esupsgcclient.ico" iconIndex="0"
		initialState="maximized" desktop="yes"
		applications="yes" startMenu="yes">
        <createForPack name="esup-sgc-client-evolis-sdk"/>
    </shortcut>            
	<shortcut name="esupNfcTagKeyboard"
			  target="$INSTALL_PATH\java\bin\javaw.exe" commandLine="--add-exports java.desktop/com.sun.java.swing.plaf.windows=ALL-UNNAMED -jar esupnfctagkeyboard-shib.jar"
			  workingDirectory="$INSTALL_PATH\$version" description="esupnfctagkeyboard"
			  iconFile="$INSTALL_PATH\icon\esupnfctagkeyboard.ico" iconIndex="0"
			  initialState="maximized" desktop="yes"
			  applications="yes" startMenu="yes">
        <createForPack name="esup-nfc-tag-keyboard"/>
    </shortcut>        
	<shortcut name="esupNfcTagDesktop"
			  target="$INSTALL_PATH\java\bin\javaw.exe" commandLine="-Dcom.sun.webkit.useHTTP2Loader=false -jar esupnfctagdesktop-shib.jar"
			  workingDirectory="$INSTALL_PATH\$version" description="esupnfctagdesktop"
			  iconFile="$INSTALL_PATH\icon\esupnfctagdesktop.ico" iconIndex="0"
			  initialState="normal" desktop="yes"
			  applications="yes" startMenu="yes">
        <createForPack name="esup-nfc-tag-desktop"/>
    </shortcut>                
</izpack:shortcuts>
